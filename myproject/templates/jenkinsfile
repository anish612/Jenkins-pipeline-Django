pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'python manage.py test'
            }
        }

        stage('Deploy') {
            steps {
                {
                    sh 'pip install -r requirements.txt'
                    sh 'python manage.py collectstatic --noinput'
                    sh 'python manage.py migrate --noinput'
                    sh 'python manage.py runserver 0.0.0.0:8000'
                }
            }
        }
    }
}